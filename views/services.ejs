<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Services</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/css/mainStyle.css">
</head>
<body class="services-page">

<!-- NAVBAR (brand styled via mainStyle.css) -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">Sole Traders</a>

    <div class="ms-auto">
      <a href="/traders" class="btn btn-outline-primary btn-sm me-2">View Traders</a>
      <a href="/login" class="btn btn-outline-primary btn-sm me-2">Login</a>
      <a href="/register" class="btn btn-primary btn-sm">Register</a>
    </div>
  </div>
</nav>

<div class="container py-4">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-2 mb-3">
    <div>
      <h1 class="mb-1">Available Services</h1>
      <p class="text-muted mb-0">Filter by category or search by keywords.</p>
    </div>
  </div>

  <!-- FILTER BUTTONS (pills style) -->
  <div class="d-flex flex-wrap gap-2 mb-3">
    <button class="btn btn-outline-primary btn-sm filter-btn active" data-category="all">All</button>
    <button class="btn btn-outline-primary btn-sm filter-btn" data-category="Plumbing">Plumbing</button>
    <button class="btn btn-outline-primary btn-sm filter-btn" data-category="Electrical">Electrical</button>
    <button class="btn btn-outline-primary btn-sm filter-btn" data-category="Cleaning">Cleaning</button>
    <button class="btn btn-outline-primary btn-sm filter-btn" data-category="Carpentry">Carpentry</button>
    <button class="btn btn-outline-primary btn-sm filter-btn" data-category="Gardening">Gardening</button>
    <button class="btn btn-outline-primary btn-sm filter-btn" data-category="Painting">Painting</button>
  </div>

  <!-- SEARCH BAR -->
  <div class="mb-4">
    <input
      type="text"
      id="service-search"
      class="form-control"
      placeholder="Search services by title or description..."
      autocomplete="off"
    >
  </div>

  <!-- Services Grid -->
  <div class="row g-4" id="services-container">
    <% if (services && services.length > 0) { %>
      <% services.forEach(service => { %>
        <div class="col-md-6 col-lg-4 service-card" data-category="<%= (service.category || '').toLowerCase() %>">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start gap-2">
                <h5 class="card-title mb-2"><%= service.title %></h5>
                <% if (service.category) { %>
                  <span class="badge bg-secondary"><%= service.category %></span>
                <% } %>
              </div>

              <p class="card-text text-muted mb-3"><%= service.description %></p>

              <div class="mt-auto">
                <div class="small mb-2">
                  <strong>Price:</strong>
                  £<%= service.basePrice %>
                  <span class="text-muted">(<%= service.pricingType %>)</span>
                </div>

                <div class="small mb-3">
                  <strong>Trader:</strong>
                  <%= service.traderId?.name %>
                  <span class="text-muted">— <%= service.traderId?.tradeType %></span>
                </div>

                <button
                  class="btn btn-primary btn-sm w-100 request-service-btn"
                  data-service-id="<%= service._id %>"
                  data-trader-id="<%= service.traderId?._id %>"
                  data-service-title="<%- (service.title || '').replace(/"/g, '&quot;') %>"
                  data-trader-name="<%- (service.traderId?.name || '').replace(/"/g, '&quot;') %>"
                >
                  Request Service
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-secondary mb-0">No services available at the moment.</div>
      </div>
    <% } %>
  </div>

  <!-- Message when no services match filter/search -->
  <div id="no-services-msg" class="alert alert-warning mt-4 d-none">
    No services match your search or filter.
  </div>
</div>

<!-- =========================
   REQUEST SERVICE MODAL
========================= -->
<div class="modal fade" id="requestServiceModal" tabindex="-1" aria-labelledby="requestServiceLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="requestServiceForm" class="modal-content" novalidate>
      <div class="modal-header">
        <h5 class="modal-title" id="requestServiceLabel">Request Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <input type="hidden" id="serviceId" name="serviceId">
        <input type="hidden" id="traderId" name="traderId">

        <div class="mb-3">
          <label for="clientName" class="form-label">Name</label>
          <input type="text" class="form-control" id="clientName" name="clientName" required>
          <div class="invalid-feedback">Please enter your name.</div>
        </div>

        <div class="mb-3">
          <label for="clientEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="clientEmail" name="clientEmail" required>
          <div class="invalid-feedback">Please enter a valid email.</div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Town / City</label>
          <input type="text" class="form-control" id="location" name="location" required>
          <div class="invalid-feedback">Please enter your town/city.</div>
        </div>

        <div class="mb-3">
          <label for="requestedDateTime" class="form-label">Requested Date &amp; Time</label>
          <input type="datetime-local" class="form-control" id="requestedDateTime" name="requestedDateTime" required>
          <div class="invalid-feedback">Please choose a date and time.</div>
        </div>

        <div class="mb-3">
          <label for="jobDescription" class="form-label">Job Description</label>
          <textarea id="jobDescription" name="jobDescription" class="form-control" rows="3" required></textarea>
          <div class="invalid-feedback">Please add a short description.</div>
        </div>

        <div id="requestError" class="alert alert-danger d-none mb-0">
          Error submitting request. Please try again.
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit Request</button>
      </div>
    </form>
  </div>
</div>

<!-- SUCCESS MODAL -->
<div class="modal fade" id="requestSuccessModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Request Sent</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Your service request has been submitted successfully.
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" data-bs-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
(() => {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const serviceCards = document.querySelectorAll('.service-card');
  const noServicesMsg = document.getElementById('no-services-msg');
  const searchInput = document.getElementById('service-search');

  let currentCategory = 'all';

  function setActiveFilter(btn) {
    filterBtns.forEach(b => b.classList.remove('active'));
    btn.classList.add('active');
  }

  // Category filter
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      currentCategory = (btn.dataset.category || 'all').toLowerCase();
      setActiveFilter(btn);
      filterServices();
    });
  });

  // Search filter
  searchInput.addEventListener('input', filterServices);

  function filterServices() {
    const query = (searchInput.value || '').toLowerCase().trim();
    let anyVisible = false;

    serviceCards.forEach(card => {
      const cardCategory = (card.dataset.category || '').toLowerCase();
      const title = (card.querySelector('.card-title')?.textContent || '').toLowerCase();
      const description = (card.querySelector('.card-text')?.textContent || '').toLowerCase();

      const matchesCategory = currentCategory === 'all' || cardCategory === currentCategory;
      const matchesSearch = !query || title.includes(query) || description.includes(query);

      const show = matchesCategory && matchesSearch;
      card.style.display = show ? '' : 'none';
      if (show) anyVisible = true;
    });

    noServicesMsg.classList.toggle('d-none', anyVisible);
  }

  // ===== Request modal logic =====
  const requestButtons = document.querySelectorAll('.request-service-btn');
  const requestServiceModalEl = document.getElementById('requestServiceModal');
  const requestSuccessModalEl = document.getElementById('requestSuccessModal');

  const requestServiceModal = new bootstrap.Modal(requestServiceModalEl);
  const requestSuccessModal = new bootstrap.Modal(requestSuccessModalEl);

  const requestForm = document.getElementById('requestServiceForm');
  const modalTitle = document.getElementById('requestServiceLabel');
  const requestError = document.getElementById('requestError');

  requestButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      document.getElementById('serviceId').value = btn.dataset.serviceId || '';
      document.getElementById('traderId').value = btn.dataset.traderId || '';
      modalTitle.textContent = `Request Service: ${btn.dataset.serviceTitle || 'Service'} (${btn.dataset.traderName || 'Trader'})`;

      requestError.classList.add('d-none');
      requestForm.classList.remove('was-validated');
      requestServiceModal.show();
    });
  });

  requestForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    requestError.classList.add('d-none');

    if (!requestForm.checkValidity()) {
      requestForm.classList.add('was-validated');
      return;
    }

    const payload = {
      serviceId: document.getElementById('serviceId').value,
      traderId: document.getElementById('traderId').value,
      clientName: document.getElementById('clientName').value,
      clientEmail: document.getElementById('clientEmail').value,
      location: document.getElementById('location').value,
      requestedDateTime: document.getElementById('requestedDateTime').value,
      jobDescription: document.getElementById('jobDescription').value
    };

    try {
      const res = await fetch('/book-service', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      if (!res.ok) {
        requestError.classList.remove('d-none');
        return;
      }

      bootstrap.Modal.getInstance(requestServiceModalEl)?.hide();
      requestForm.reset();
      requestSuccessModal.show();
    } catch (err) {
      console.error(err);
      requestError.classList.remove('d-none');
    }
  });

  // initial filter
  filterServices();
})();
</script>

</body>
</html>
