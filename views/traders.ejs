<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Trader Directory</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    .stars {
      letter-spacing: 1px;
      font-size: 1.05rem;
      line-height: 1;
      user-select: none;
      color: #f4c150;
    }
    .review-snippet {
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

<!-- NAVBAR (PUBLIC-SAFE) -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">Sole Traders</a>

    <div class="ms-auto">
      <% if (typeof trader !== 'undefined' && trader) { %>
        <span class="me-3">Welcome, <%= trader.name %></span>
        <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
      <% } else { %>
        <a href="/services" class="btn btn-outline-primary btn-sm me-2">View Services</a>
        <a href="/login" class="btn btn-outline-primary btn-sm me-2">Login</a>
        <a href="/register" class="btn btn-primary btn-sm">Register</a>
      <% } %>
    </div>
  </div>
</nav>

<div class="container py-4">
  <h1 class="mb-3">Trader Directory</h1>
  <p class="text-muted mb-4">Browse traders, view their services, and read reviews.</p>

  <!-- FILTERS -->
  <div class="row g-2 mb-4">
    <div class="col-md-4">
      <input id="searchInput" type="text" class="form-control" placeholder="Search by name..." />
    </div>

    <div class="col-md-4">
      <select id="tradeTypeFilter" class="form-select">
        <option value="all">All Trade Types</option>
        <option value="plumbing">Plumbing</option>
        <option value="electrical">Electrical</option>
        <option value="cleaning">Cleaning</option>
        <option value="carpentry">Carpentry</option>
        <option value="gardening">Gardening</option>
        <option value="painting">Painting</option>
      </select>
    </div>

    <div class="col-md-4">
      <input id="regionFilter" type="text" class="form-control" placeholder="Filter by region/town..." />
    </div>
  </div>

  <div id="noResults" class="alert alert-warning d-none">
    No traders match your filters.
  </div>

  <!-- TRADER CARDS -->
  <div class="row g-4" id="traderContainer">
    <% if (traders && traders.length > 0) { %>
      <% traders.forEach(t => { %>
        <div
          class="col-md-6 col-lg-4 trader-card"
          data-trader-id="<%= t._id %>"
          data-name="<%= (t.name || '').toLowerCase().trim() %>"
          data-tradetype="<%= (t.tradeType || '').toLowerCase().trim() %>"
          data-region="<%= (t.region || '').toLowerCase().trim() %>"
        >
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start gap-2">
                <h5 class="card-title mb-2"><%= t.name %></h5>

                <!-- Review button on card -->
                <button
                  type="button"
                  class="btn btn-outline-secondary btn-sm review-trader-btn"
                  data-trader-id="<%= t._id %>"
                  data-trader-name="<%= t.name %>"
                >
                  Review
                </button>
              </div>

              <!-- Average rating placeholder -->
              <div class="mb-2">
                <div class="d-flex align-items-center gap-2">
                  <div class="stars" id="cardStars-<%= t._id %>">☆☆☆☆☆</div>
                  <div class="small" id="cardRatingText-<%= t._id %>">No reviews yet</div>
                </div>
              </div>

              <p class="mb-1">
                <strong>Trade Type:</strong> <%= t.tradeType %>
              </p>

              <p class="mb-2">
                <strong>Region/Town:</strong> <%= t.region %>
              </p>

              <!-- Recent reviews snippet -->
              <div class="border-top pt-2 mt-1 mb-3" id="cardRecentReviews-<%= t._id %>">
                <div class="small text-muted">Loading reviews…</div>
              </div>

              <button
                type="button"
                class="btn btn-primary btn-sm mt-auto view-profile-btn"
                data-bs-toggle="modal"
                data-bs-target="#traderProfileModal"
                data-trader-id="<%= t._id %>"
                data-trader-name="<%= t.name %>"
                data-trader-tradetype="<%= t.tradeType || '' %>"
                data-trader-region="<%= t.region || '' %>"
                data-trader-bio="<%= t.bio || '' %>"
                data-trader-availability="<%= t.availability || '' %>"
              >
                View Profile
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No traders available right now.</p>
    <% } %>
  </div>
</div>

<!-- =========================
     TRADER PROFILE MODAL
========================= -->
<div class="modal fade" id="traderProfileModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Trader Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <!-- Header block: name + rating + review button -->
        <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
          <div>
            <h5 id="profileTraderName" class="mb-1"></h5>

            <div class="d-flex align-items-center gap-2">
              <div class="stars" id="profileStars">☆☆☆☆☆</div>
              <div class="text-muted small" id="profileRatingText">No reviews yet</div>
            </div>

            <div class="mt-2">
              <p class="mb-1"><strong>Trade Type:</strong> <span id="profileTradeType"></span></p>
              <p class="mb-1"><strong>Region/Town:</strong> <span id="profileRegion"></span></p>
            </div>
          </div>

          <div class="text-end">
            <button
              type="button"
              class="btn btn-outline-secondary btn-sm"
              id="profileReviewBtn"
              data-trader-id=""
              data-trader-name=""
            >
              Review Trader
            </button>
          </div>
        </div>

        <div id="bioBlock" class="mt-2 d-none">
          <p class="mb-1"><strong>Bio:</strong></p>
          <p class="mb-0 text-muted" id="profileBio"></p>
        </div>

        <div id="availabilityBlock" class="mt-2 d-none">
          <p class="mb-1"><strong>Availability:</strong> <span id="profileAvailability"></span></p>
        </div>

        <hr />

        <!-- Recent reviews -->
        <h5 class="mb-2">Recent Reviews</h5>
        <div id="profileReviewsEmpty" class="alert alert-secondary d-none mb-3">
          No reviews yet — be the first to leave one.
        </div>
        <div id="profileReviewsList" class="list-group mb-3 d-none"></div>

        <hr />

        <h5 class="mb-3">Services</h5>

        <div id="servicesEmpty" class="alert alert-secondary d-none mb-0">
          This trader has not added any services yet.
        </div>

        <div id="servicesList" class="list-group d-none"></div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>

<!-- =========================
     REVIEW TRADER MODAL
========================= -->
<div class="modal fade" id="reviewTraderModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form id="reviewTraderForm" class="modal-content" novalidate>
      <div class="modal-header">
        <h5 class="modal-title" id="reviewTraderLabel">Review Trader</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <input type="hidden" id="reviewTraderId" name="traderId" />

        <div class="mb-3">
          <label class="form-label">Your Name</label>
          <input type="text" class="form-control" id="reviewerName" name="reviewerName" required />
          <div class="invalid-feedback">Please enter your name.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Your Email (optional)</label>
          <input type="email" class="form-control" id="reviewerEmail" name="reviewerEmail" />
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Rating</label>
          <select class="form-select" id="reviewRating" name="rating" required>
            <option value="">Select…</option>
            <option value="5">★★★★★ (5)</option>
            <option value="4">★★★★☆ (4)</option>
            <option value="3">★★★☆☆ (3)</option>
            <option value="2">★★☆☆☆ (2)</option>
            <option value="1">★☆☆☆☆ (1)</option>
          </select>
          <div class="invalid-feedback">Please choose a rating.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Comment</label>
          <textarea class="form-control" id="reviewComment" name="comment" rows="3" required></textarea>
          <div class="invalid-feedback">Please add a short comment.</div>
        </div>

        <div id="reviewError" class="alert alert-danger d-none mb-0">
          Error submitting review. Please try again.
        </div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
        <button class="btn btn-primary" type="submit">Submit Review</button>
      </div>
    </form>
  </div>
</div>

<!-- =========================
     REQUEST SERVICE MODAL
========================= -->
<div class="modal fade" id="requestServiceModal" tabindex="-1" aria-labelledby="requestServiceLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="requestServiceForm" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="requestServiceLabel">Request Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <input type="hidden" id="serviceId" name="serviceId" />
        <input type="hidden" id="traderId" name="traderId" />

        <div class="mb-3">
          <label for="clientName" class="form-label">Name</label>
          <input type="text" class="form-control" id="clientName" name="clientName" required />
        </div>

        <div class="mb-3">
          <label for="clientEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="clientEmail" name="clientEmail" required />
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Town / City</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="e.g. Belfast" required />
        </div>

        <div class="mb-3">
          <label for="requestedDateTime" class="form-label">Requested Date &amp; Time</label>
          <input type="datetime-local" class="form-control" id="requestedDateTime" name="requestedDateTime" required />
        </div>

        <div class="mb-3">
          <label for="jobDescription" class="form-label">Job Description</label>
          <textarea id="jobDescription" name="jobDescription" class="form-control" required></textarea>
        </div>

        <div id="requestError" class="alert alert-danger d-none mb-0">
          Error submitting request. Please try again.
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit Request</button>
      </div>
    </form>
  </div>
</div>

<!-- SUCCESS MODAL -->
<div class="modal fade" id="requestSuccessModal" tabindex="-1" aria-labelledby="requestSuccessLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="requestSuccessLabel">Request Sent</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Your service request has been submitted successfully.
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" data-bs-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const ALL_TRADERS = <%- JSON.stringify(traders || [])
    .replace(/</g, '\\u003c')
    .replace(/>/g, '\\u003e')
    .replace(/&/g, '\\u0026')
  %>;

  // ====== Directory filters ======
  const searchInput = document.getElementById('searchInput');
  const tradeTypeFilter = document.getElementById('tradeTypeFilter');
  const regionFilter = document.getElementById('regionFilter');
  const cards = document.querySelectorAll('.trader-card');
  const noResults = document.getElementById('noResults');

  function applyFilters() {
    const search = (searchInput.value || '').trim().toLowerCase();
    const tradeType = (tradeTypeFilter.value || '').trim().toLowerCase();
    const region = (regionFilter.value || '').trim().toLowerCase();

    let visibleCount = 0;

    cards.forEach(card => {
      const name = (card.dataset.name || '').trim();
      const cardTradeType = (card.dataset.tradetype || '').trim();
      const cardRegion = (card.dataset.region || '').trim();

      const matchesSearch = !search || name.includes(search);
      const matchesTrade = tradeType === 'all' || cardTradeType === tradeType;
      const matchesRegion = !region || cardRegion.includes(region);

      if (matchesSearch && matchesTrade && matchesRegion) {
        card.style.display = '';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    noResults.classList.toggle('d-none', visibleCount !== 0);
  }

  searchInput.addEventListener('input', applyFilters);
  tradeTypeFilter.addEventListener('change', applyFilters);
  regionFilter.addEventListener('input', applyFilters);

  // ====== Modals ======
  const traderProfileModalEl = document.getElementById('traderProfileModal');
  const requestServiceModalEl = document.getElementById('requestServiceModal');
  const requestSuccessModalEl = document.getElementById('requestSuccessModal');
  const reviewTraderModalEl = document.getElementById('reviewTraderModal');

  const requestServiceModal = new bootstrap.Modal(requestServiceModalEl);
  const requestSuccessModal = new bootstrap.Modal(requestSuccessModalEl);
  const reviewTraderModal = new bootstrap.Modal(reviewTraderModalEl);

  const servicesEmpty = document.getElementById('servicesEmpty');
  const servicesList = document.getElementById('servicesList');

  const profileTraderName = document.getElementById('profileTraderName');
  const profileTradeType = document.getElementById('profileTradeType');
  const profileRegion = document.getElementById('profileRegion');
  const profileBio = document.getElementById('profileBio');
  const profileAvailability = document.getElementById('profileAvailability');
  const bioBlock = document.getElementById('bioBlock');
  const availabilityBlock = document.getElementById('availabilityBlock');

  // Reviews UI in profile
  const profileStars = document.getElementById('profileStars');
  const profileRatingText = document.getElementById('profileRatingText');
  const profileReviewsEmpty = document.getElementById('profileReviewsEmpty');
  const profileReviewsList = document.getElementById('profileReviewsList');
  const profileReviewBtn = document.getElementById('profileReviewBtn');

  // Request form elements
  const requestForm = document.getElementById('requestServiceForm');
  const requestError = document.getElementById('requestError');

  const serviceIdEl = document.getElementById('serviceId');
  const traderIdEl = document.getElementById('traderId');
  const clientNameEl = document.getElementById('clientName');
  const clientEmailEl = document.getElementById('clientEmail');
  const locationEl = document.getElementById('location');
  const requestedDateTimeEl = document.getElementById('requestedDateTime');
  const jobDescriptionEl = document.getElementById('jobDescription');
  const requestServiceLabel = document.getElementById('requestServiceLabel');

  // Review form elements
  const reviewForm = document.getElementById('reviewTraderForm');
  const reviewTraderLabel = document.getElementById('reviewTraderLabel');
  const reviewTraderId = document.getElementById('reviewTraderId');
  const reviewerName = document.getElementById('reviewerName');
  const reviewerEmail = document.getElementById('reviewerEmail');
  const reviewRating = document.getElementById('reviewRating');
  const reviewComment = document.getElementById('reviewComment');
  const reviewError = document.getElementById('reviewError');

  // ====== Reviews: fetch/cache and render ======
  const REVIEWS_CACHE = new Map(); // traderId -> { average, count, reviews: [] }

  async function fetchReviews(traderId) {
    if (!traderId) return { average: 0, count: 0, reviews: [] };

    const cached = REVIEWS_CACHE.get(String(traderId));
    if (cached) return cached;

    try {
      const res = await fetch(`/reviews/${encodeURIComponent(traderId)}`);
      if (!res.ok) throw new Error('Failed');
      const data = await res.json();

      // Expecting reviewController.getReviewsForTrader to return:
      // { averageRating: Number, totalReviews: Number, reviews: Array }
      const normalized = {
        average: Number(data.averageRating || 0),
        count: Number(data.totalReviews || 0),
        reviews: Array.isArray(data.reviews) ? data.reviews : []
      };

      REVIEWS_CACHE.set(String(traderId), normalized);
      return normalized;
    } catch (e) {
      const fallback = { average: 0, count: 0, reviews: [] };
      REVIEWS_CACHE.set(String(traderId), fallback);
      return fallback;
    }
  }

  function starsText(avg) {
    const full = Math.round(Number(avg || 0)); // simple average -> rounded stars
    const clamped = Math.max(0, Math.min(5, full));
    return '★★★★★'.slice(0, clamped) + '☆☆☆☆☆'.slice(0, 5 - clamped);
  }

  function ratingLine(avg, count) {
    if (!count) return 'No reviews yet';
    return `${Number(avg).toFixed(1)} / 5 (${count} review${count === 1 ? '' : 's'})`;
  }

  function renderCardReviews(traderId, data) {
    const starsEl = document.getElementById(`cardStars-${traderId}`);
    const textEl = document.getElementById(`cardRatingText-${traderId}`);
    const recentEl = document.getElementById(`cardRecentReviews-${traderId}`);

    if (starsEl) starsEl.textContent = data.count ? starsText(data.average) : '☆☆☆☆☆';
    if (textEl) textEl.textContent = ratingLine(data.average, data.count);

    if (!recentEl) return;

    if (!data.count) {
      recentEl.innerHTML = `<div class="small text-muted">No reviews yet.</div>`;
      return;
    }

    const recent = data.reviews.slice(0, 2); // show 2 on card
    recentEl.innerHTML = recent.map(r => {
      const who = escapeHtml(r.reviewerName || 'Anonymous');
      const comment = escapeHtml(r.comment || '');
      const rating = starsText(r.rating || 0);
      return `
        <div class="review-snippet mb-2">
          <div class="d-flex align-items-center gap-2">
            <span class="stars">${rating}</span>
            <span class="small text-muted">${who}</span>
          </div>
          <div class="small text-muted">${truncate(comment, 90)}</div>
        </div>
      `;
    }).join('') + `<div class="small text-muted">Click “View Profile” to see more.</div>`;
  }

  function renderProfileReviews(traderId, data) {
    profileStars.textContent = data.count ? starsText(data.average) : '☆☆☆☆☆';
    profileRatingText.textContent = ratingLine(data.average, data.count);

    if (!data.count) {
      profileReviewsEmpty.classList.remove('d-none');
      profileReviewsList.classList.add('d-none');
      profileReviewsList.innerHTML = '';
      return;
    }

    profileReviewsEmpty.classList.add('d-none');
    profileReviewsList.classList.remove('d-none');

    const recent = data.reviews.slice(0, 5);
    profileReviewsList.innerHTML = recent.map(r => {
      const who = escapeHtml(r.reviewerName || 'Anonymous');
      const when = r.createdAt ? new Date(r.createdAt).toLocaleDateString('en-GB') : '';
      const comment = escapeHtml(r.comment || '');
      const rating = starsText(r.rating || 0);
      return `
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
              <span class="stars">${rating}</span>
              <span class="fw-semibold">${who}</span>
            </div>
            <div class="small text-muted">${escapeHtml(when)}</div>
          </div>
          <div class="text-muted small mt-1">${comment}</div>
        </div>
      `;
    }).join('');
  }

  async function hydrateAllCards() {
    const ids = Array.from(cards).map(c => c.dataset.traderId).filter(Boolean);
    await Promise.all(ids.map(async (id) => {
      const data = await fetchReviews(id);
      renderCardReviews(id, data);
    }));
  }

  // Load reviews for all cards once
  document.addEventListener('DOMContentLoaded', () => {
    hydrateAllCards();
  });

  // ====== Trader profile modal: show embedded services + allow booking + show reviews ======
  traderProfileModalEl.addEventListener('show.bs.modal', async (event) => {
    const btn = event.relatedTarget;
    const traderId = btn.dataset.traderId;

    // Populate profile fields
    profileTraderName.textContent = btn.dataset.traderName || '';
    profileTradeType.textContent = btn.dataset.traderTradetype || '';
    profileRegion.textContent = btn.dataset.traderRegion || '';

    // Set Review Trader button context
    profileReviewBtn.dataset.traderId = traderId || '';
    profileReviewBtn.dataset.traderName = btn.dataset.traderName || '';

    const bio = (btn.dataset.traderBio || '').trim();
    if (bio) {
      bioBlock.classList.remove('d-none');
      profileBio.textContent = bio;
    } else {
      bioBlock.classList.add('d-none');
      profileBio.textContent = '';
    }

    const avail = (btn.dataset.traderAvailability || '').trim();
    if (avail) {
      availabilityBlock.classList.remove('d-none');
      profileAvailability.textContent = avail;
    } else {
      availabilityBlock.classList.add('d-none');
      profileAvailability.textContent = '';
    }

    // Reviews (fetch + render)
    const reviewsData = await fetchReviews(traderId);
    renderProfileReviews(traderId, reviewsData);

    // Reset services UI
    servicesEmpty.classList.add('d-none');
    servicesList.classList.add('d-none');
    servicesList.innerHTML = '';

    // Find trader + services from embedded data
    const traderObj = ALL_TRADERS.find(t => String(t._id) === String(traderId));
    const services = (traderObj && traderObj.services) ? traderObj.services : [];

    if (!services.length) {
      servicesEmpty.classList.remove('d-none');
      return;
    }

    servicesList.classList.remove('d-none');

    services.forEach(service => {
      const item = document.createElement('div');
      item.className = 'list-group-item';

      item.innerHTML = `
        <div class="d-flex justify-content-between align-items-start gap-3">
          <div>
            <div class="fw-semibold">${escapeHtml(service.title || 'Service')}</div>
            <div class="text-muted small">${escapeHtml(service.description || '')}</div>
            <div class="small mt-2">
              <strong>Price:</strong> £${escapeHtml(String(service.basePrice ?? ''))}
              (${escapeHtml(service.pricingType || '')})
              ${service.category ? ` • <strong>Category:</strong> ${escapeHtml(service.category)}` : ''}
            </div>
          </div>
          <div class="text-end">
            <button
              type="button"
              class="btn btn-primary btn-sm request-from-trader-btn"
              data-service-id="${service._id}"
              data-trader-id="${traderId}"
              data-service-title="${escapeHtml(service.title || 'Service')}"
              data-trader-name="${escapeHtml(btn.dataset.traderName || 'Trader')}"
            >
              Request
            </button>
          </div>
        </div>
      `;

      servicesList.appendChild(item);
    });
  });

  // Open review modal (from card top button)
  document.addEventListener('click', (e) => {
    const btn = e.target.closest('.review-trader-btn');
    if (!btn) return;

    openReviewModal(btn.dataset.traderId, btn.dataset.traderName);
  });

  // Open review modal (from profile modal button)
  profileReviewBtn.addEventListener('click', () => {
    openReviewModal(profileReviewBtn.dataset.traderId, profileReviewBtn.dataset.traderName);
  });

  function openReviewModal(traderId, traderName) {
    reviewError.classList.add('d-none');
    reviewForm.classList.remove('was-validated');

    reviewTraderId.value = traderId || '';
    reviewTraderLabel.textContent = `Review Trader: ${traderName || 'Trader'}`;

    // reset fields
    reviewerName.value = '';
    reviewerEmail.value = '';
    reviewRating.value = '';
    reviewComment.value = '';

    reviewTraderModal.show();
  }

  // Submit review
  reviewForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    reviewError.classList.add('d-none');

    // basic client-side validation
    if (!reviewForm.checkValidity()) {
      reviewForm.classList.add('was-validated');
      return;
    }

    const payload = {
      traderId: reviewTraderId.value,
      reviewerName: reviewerName.value.trim(),
      reviewerEmail: reviewerEmail.value.trim(),
      rating: Number(reviewRating.value),
      comment: reviewComment.value.trim()
    };

    try {
      const res = await fetch('/reviews', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      if (!res.ok) {
        reviewError.classList.remove('d-none');
        return;
      }

      // close modal
      bootstrap.Modal.getInstance(reviewTraderModalEl)?.hide();

      // refresh this trader's reviews cache + UI
      REVIEWS_CACHE.delete(String(payload.traderId));
      const updated = await fetchReviews(payload.traderId);

      renderCardReviews(payload.traderId, updated);

      // if profile modal currently open for same trader, refresh it too
      if (profileReviewBtn.dataset.traderId && String(profileReviewBtn.dataset.traderId) === String(payload.traderId)) {
        renderProfileReviews(payload.traderId, updated);
      }
    } catch (err) {
      console.error('Review submit failed:', err);
      reviewError.classList.remove('d-none');
    }
  });

  // Click "Request" inside trader profile modal
  document.addEventListener('click', (e) => {
    const btn = e.target.closest('.request-from-trader-btn');
    if (!btn) return;

    // set hidden ids
    serviceIdEl.value = btn.dataset.serviceId || '';
    traderIdEl.value = btn.dataset.traderId || '';

    // label
    requestServiceLabel.textContent =
      `Request Service: ${btn.dataset.serviceTitle || 'Service'} (${btn.dataset.traderName || 'Trader'})`;

    // clear any previous error
    requestError.classList.add('d-none');

    // close profile modal then open request modal
    const traderProfileInstance = bootstrap.Modal.getInstance(traderProfileModalEl);
    traderProfileInstance?.hide();

    requestServiceModal.show();
  });

  // Submit booking request
  requestForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    requestError.classList.add('d-none');

    const payload = {
      serviceId: serviceIdEl.value,
      traderId: traderIdEl.value,
      clientName: clientNameEl.value,
      clientEmail: clientEmailEl.value,
      location: locationEl.value,
      requestedDateTime: requestedDateTimeEl.value,
      jobDescription: jobDescriptionEl.value
    };

    try {
      const res = await fetch('/book-service', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      if (!res.ok) {
        requestError.classList.remove('d-none');
        return;
      }

      // Hide request modal, reset, show success
      bootstrap.Modal.getInstance(requestServiceModalEl)?.hide();
      requestForm.reset();
      requestSuccessModal.show();
    } catch (err) {
      console.error('Booking request failed:', err);
      requestError.classList.remove('d-none');
    }
  });

  function truncate(str, n) {
    const s = String(str || '');
    if (s.length <= n) return s;
    return s.slice(0, n - 1) + '…';
  }

  function escapeHtml(str) {
    return String(str)
      .replaceAll('&', '&amp;')
      .replaceAll('<', '&lt;')
      .replaceAll('>', '&gt;')
      .replaceAll('"', '&quot;')
      .replaceAll("'", '&#039;');
  }
</script>

