<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register – Sole Traders</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body class="bg-light">

<nav class="navbar navbar-light bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand" href="/">Sole Traders</a>
    <a href="/login" class="btn btn-outline-primary btn-sm">Login</a>
  </div>
</nav>

<div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 70px);">
  <div class="card shadow-sm" style="max-width: 480px; width: 100%;">
    <div class="card-body p-4">

      <h3 class="mb-4 text-center">Register as a Trader</h3>

      <form method="POST" action="/register" id="registerForm" novalidate>

        <div class="mb-3">
          <label class="form-label">Full Name</label>
          <input type="text" class="form-control" name="name" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          >
          <div class="invalid-feedback">
            Username already in use
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          >
          <div class="invalid-feedback" id="emailFormatError">
            Enter a valid email address
          </div>
          <div class="invalid-feedback d-none" id="emailTakenError">
            Email already in use
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            required
            minlength="6"
          >
          <div class="form-text">Minimum 6 characters</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Trade Type</label>
          <select class="form-select" name="tradeType" required>
            <option value="">Select…</option>
            <option>Plumbing</option>
            <option>Electrical</option>
            <option>Cleaning</option>
            <option>Carpentry</option>
            <option>Gardening</option>
            <option>Painting</option>
          </select>
        </div>

        <div class="mb-4">
          <label class="form-label">Region / Town</label>
          <input type="text" class="form-control" name="region" required>
        </div>

        <button
          type="submit"
          class="btn btn-primary w-100"
          id="submitBtn"
          disabled
        >
          Register
        </button>

      </form>

    </div>
  </div>
</div>

<script>
(() => {
  const usernameInput = document.getElementById('username');
  const emailInput = document.getElementById('email');
  const submitBtn = document.getElementById('submitBtn');

  const emailFormatError = document.getElementById('emailFormatError');
  const emailTakenError = document.getElementById('emailTakenError');

  let usernameOk = false;
  let emailOk = false;

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  async function checkAvailability() {
    const username = usernameInput.value.trim();
    const email = emailInput.value.trim();

    // ----- EMAIL FORMAT CHECK -----
    if (email) {
      const formatValid = emailRegex.test(email);

      if (!formatValid) {
        emailOk = false;

        emailInput.classList.add('is-invalid');
        emailInput.classList.remove('is-valid');

        emailFormatError.classList.remove('d-none');
        emailTakenError.classList.add('d-none');

        submitBtn.disabled = true;
        return;
      }

      emailFormatError.classList.add('d-none');
    }

    // ----- SERVER AVAILABILITY CHECK -----
    const params = new URLSearchParams();
    if (username) params.append('username', username);
    if (email) params.append('email', email);

    try {
      const res = await fetch(`/auth/check-availability?${params}`);
      const data = await res.json();

      // Username
      if (username) {
        usernameOk = data.usernameAvailable;
        usernameInput.classList.toggle('is-invalid', !usernameOk);
        usernameInput.classList.toggle('is-valid', usernameOk);
      }

      // Email availability
      if (email) {
        emailOk = data.emailAvailable;

        emailInput.classList.toggle('is-invalid', !emailOk);
        emailInput.classList.toggle('is-valid', emailOk);

        emailTakenError.classList.toggle('d-none', emailOk);
      }

      submitBtn.disabled = !(usernameOk && emailOk);

    } catch (err) {
      console.error('Availability check failed', err);
    }
  }

  let debounceTimer;
  function debounceCheck() {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(checkAvailability, 400);
  }

  usernameInput.addEventListener('input', debounceCheck);
  emailInput.addEventListener('input', debounceCheck);
})();
</script>

</body>
</html>
